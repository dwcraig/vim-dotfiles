"get started from pathogen
execute pathogen#infect()
syntax on
filetype plugin indent on
colorscheme monokai

" airline tabline
let g:airline#extensions#tabline#enabled=1

"line numbers
set number

"mouse select
set mouse=a

" show existing tabs as 4 spaces
set tabstop=4
" when indenting with '>', use 4 spaces width
set shiftwidth=4
" when tab is pressed, insert 4 spaces
set expandtab

" set 256 colors
set t_Co=256
